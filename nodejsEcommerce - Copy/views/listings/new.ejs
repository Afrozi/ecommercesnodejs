<% layout('/layouts/biolerplate.ejs') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <form action="/testlisting" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]" placeholder="inter image URL/Link" class="form-control">
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="number" class="form-label">Number</label> 
            <input type="number" name="listing[price]" placeholder="enter price" class="form-control">
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label> 
            <input type="text" name="listing[location]" placeholder="enter location" class="form-control">
        </div>
    </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="enter country" class="form-control"> 
        </div>
        <button class="btn btn-dark">Add</button>
        <br><br>
    </form>
</div>
</div>
</body>
