<% layout('/layouts/biolerplate.ejs') -%>
<body>
   <h1>All Listings</h1> 
   <!-- <form action="/testlisting/new" method="get">
    <button>Create New Listing</button>
   </form> -->
   <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
      <% for(let listing of alllisting) { %>
         <a href="/testlisting/<%= listing._id %>" class="testlisting-link">
         <div class="card col">
            <img src="<%= listing.image %>" class="card-img-top"style="height: 20rem"; alt="listing-image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
            <b> <p class="card-text"><%= listing.title %></b> 
               <br>
               <%= listing.price %> /night
            </p>
            </div>
          </div>
         </a>
          <% } %>      
   </div>
  
         
 
</body>


